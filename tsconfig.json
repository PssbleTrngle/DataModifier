{
   "compilerOptions": {
      "outDir": "dist",
      "strict": true,
      "lib": [
         "es2022"
      ],
      "allowJs": true,
      "target": "es2018",
      "moduleResolution": "node",
      "module": "ES2022",
      "sourceMap": true,
      "resolveJsonModule": true,
      "esModuleInterop": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "declaration": true,
      "declarationMap": true,
      "typeRoots": ["node_modules/@types", "@types"]
   },
   "include": [
      "src"
   ],
   "exclude": [
      "node_modules",
      "dist",
      "test"
   ]
}